<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <ul class="nav nav-tabs" role="tablist">
      <li><%= link_to 'Lots View', jobs_path %></li>
      <li><%= link_to 'New Lot', new_job_path %></li>
      <li><%= link_to 'Parts View', parts_path %></li>
      <li class="active"><%= link_to 'New Part', new_part_path %></li>
  </ul>

  <%= form_with scope: :part, url: parts_path, local: true do |form| %>
    <% if @part.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@part.errors.count, "error") %> prohibited this part from being saved:</h2>
        <ul>
        <% @part.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

  <div class="well" style="margin-top:2%">
    <div class="form-group">
      <%= form.label :part%>
      <%= form.text_field :part, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= form.label :description%>
      <%= form.text_field :description, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= form.label :shape%>
      <%= form.text_field :shape, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= form.label :color%>
      <%= form.text_field :color, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= form.label :coating%>
      <%= form.text_field :coating, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= form.label :mfg, "Manufacturer"%>
      <%= form.text_field :mfg, class: 'form-control'%>
    </div>
    <div class=row>
      <div class=col-2>
      <%= form.submit class: "btn btn-primary btn-block"%>
    </div>
  </div>
  </div>
  <% end %>
</body>
</html>
